[
  {
    "desc": "创建一个分支，而没有来自父分支的任何历史记录",
    "cmd": "git checkout --orphan [branch_name]"
  },
  {
    "desc": "漂亮的日志",
    "cmd": "git log --graph --pretty=format:'%C(yellow)%h%Creset -%Cred%d%Creset %s %Cgreen| %cr %C(bold blue)| %an%Creset' --abbrev-commit --date=relative"
  },
  {
    "desc": "更改最后的提交信息",
    "cmd": "commit --amend -m [message]"
  },
  {
    "desc": "清理远程分支",
    "cmd": "git remote prune origin"
  },
  {
    "desc": "设置别名",
    "cmd": "git config --global alias.[new_alias] '[previous_git_command]'",
    "example": "git config --global alias.save commit"
  }
]
