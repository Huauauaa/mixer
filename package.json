    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/clipboard": "^2.0.1",
    "@types/jest": "^26.0.15",
    "@types/lodash": "^4.14.168",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.7",
    "antd": "^4.12.2",
    "clipboard": "^2.0.6",
    "craco-less": "^1.17.1",
    "cross-env": "^7.0.3",
    "electron-is-dev": "^1.2.0",
